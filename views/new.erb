    <h3>Pirate name</h3>
        <label>Pirate name
            <input name="pirate[name]" type="text">
        </label>
        <label>Pirate weight
            <input name="pirate[weight]" type="text">
        </label>
        <label>Pirate height
            <input name="pirate[height]" type="text">
        </label>
    <h3>First ship</h3>
        <label>Ship name
            <input name="pirate[ships][][name]" id="ship_name_1" type="text">
        </label>
        <label>Ship type
            <input name="pirate[ships][][type]" id="ship_type_1" type="text">
        </label>
        <label>Ship booty
            <input name="pirate[ships][][booty]" id="ship_booty_1" type="text">
        </label>
    <h3>Second ship</h3>
        <label>Ship name
            <input name="pirate[ships][][name]" id="ship_name_2" type="text">
        </label>
        <label>Ship type
            <input name="pirate[ships][][type]" id="ship_type_2" type="text">
        </label>
        <label>Ship booty
            <input name="pirate[ships][][booty]" id="ship_booty_2" type="text">
        </label>
    <h3>Submit</h3>
        <input type="submit" id="Submit" value="Log yer scallywags">
</form>